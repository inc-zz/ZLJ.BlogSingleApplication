@page
@model Blogs.AdminSite.Pages.IndexModel
@{
    ViewData["Title"] = "仪表盘";
    Layout = "_Layout";
}

<div class="page-header">
    <h1>仪表盘</h1>
    <p class="text-muted">欢迎回来，管理员！这是您的博客后台管理系统。</p>
</div>

<!-- 统计卡片 -->
<div class="row">
    <div class="col-md-3">
        <div class="card fade-in">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-primary">用户总数</h5>
                        <h3 class="mb-0">1,254</h3>
                        <small class="text-muted">较上月增长 12%</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card fade-in">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-success">文章总数</h5>
                        <h3 class="mb-0">568</h3>
                        <small class="text-muted">较上月增长 8%</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-alt fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card fade-in">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-warning">评论总数</h5>
                        <h3 class="mb-0">2,847</h3>
                        <small class="text-muted">较上月增长 15%</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-comments fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card fade-in">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-info">访问量</h5>
                        <h3 class="mb-0">12,584</h3>
                        <small class="text-muted">今日访问 324</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-line fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 主要内容区域 -->
<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">最近文章</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>标题</th>
                                <th>作者</th>
                                <th>分类</th>
                                <th>发布时间</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>ASP.NET Core 入门教程</td>
                                <td>管理员</td>
                                <td>技术</td>
                                <td>2023-10-15</td>
                                <td><span class="badge bg-success">已发布</span></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">编辑</button>
                                    <button class="btn btn-sm btn-outline-danger">删除</button>
                                </td>
                            </tr>
                            <tr>
                                <td>前端开发最佳实践</td>
                                <td>管理员</td>
                                <td>前端</td>
                                <td>2023-10-12</td>
                                <td><span class="badge bg-warning">草稿</span></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">编辑</button>
                                    <button class="btn btn-sm btn-outline-danger">删除</button>
                                </td>
                            </tr>
                            <tr>
                                <td>数据库优化技巧</td>
                                <td>管理员</td>
                                <td>数据库</td>
                                <td>2023-10-10</td>
                                <td><span class="badge bg-success">已发布</span></td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">编辑</button>
                                    <button class="btn btn-sm btn-outline-danger">删除</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">系统信息</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        系统版本
                        <span class="badge bg-primary">v2.1.0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        服务器时间
                        <span id="serverTime">2023-10-20 14:30:25</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        运行环境
                        <span>.NET 8.0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        数据库
                        <span>SQL Server 2022</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
