@page
@model Blogs.AdminSite.Pages.IndexModel
@{
    ViewData["Title"] = "仪表盘";
    Layout = "_Layout";
}
<!-- 统计卡片 -->
<div id="homeStatisticsArea">


</div>

<!--文章列表-->
<div id="homeUserArticleList">
     
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">最近文章</h5>
            </div>
            <!--文章列表区域-->
            <div id="topUserArticleList">
                
            </div>

        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">系统信息</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        系统版本
                        <span class="badge bg-primary">v2.1.0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        服务器时间
                        <span id="serverTime">2023-10-20 14:30:25</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        运行环境
                        <span>.NET 8.0</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        数据库
                        <span>MySql8.0.21</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    $(function(){
         // 配置layui的基础路径
        layui.config({
            base: '/js/modules/'
        }).use('adminindex', function() {
            // 初始化adminindex模块
            var adminindex = layui.adminindex;
            if (adminindex && typeof adminindex.init === 'function') {
                adminindex.init();

            } else {
                console.error('adminindex 模块加载失败');
            }
         });
    });
</script>